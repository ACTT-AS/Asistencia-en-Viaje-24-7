<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splashav">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:stretchColumns="*"
        >
        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="300px"
            android:gravity="center_horizontal">
            <!--  -->
            <ImageView
                android:layout_width="285px"
                android:layout_height="285px"
                android:src="@drawable/logoea"
                android:gravity="center_horizontal"
                android:layout_marginBottom="100px"/>
        </TableRow>
        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="300px"
            android:gravity="center_horizontal">
            <!--  -->
            <TextView
                android:id="@+id/welcome_login"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/welcomeAV"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="14dp"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_marginBottom="250px"/>
        </TableRow>
        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="300px"
            android:gravity="center_horizontal">
            <!--  -->
            <Button
                android:id="@+id/btn_continuar"
                android:layout_width="400px"
                android:layout_height="200px"
                android:text="@string/continuar"
                android:layout_marginBottom="0px"
                android:textStyle="bold"
                android:textSize="50px"
                />

        </TableRow>
    </TableLayout>
</RelativeLayout>